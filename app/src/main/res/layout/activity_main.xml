<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    android:background="@color/colorPrimary">

    <EditText
        android:id="@+id/input_box"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:autofillHints="@string/outputs_title"
        android:ems="10"
        android:gravity="end"
        android:inputType="none"
        android:paddingTop="50dp"
        android:text="@string/outputs_title"
        android:textColor="@color/colorPrimaryText"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result_box"/>

    <TextView
        android:id="@+id/result_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/outputs_title"
        android:textColor="@color/secondaryText"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/input_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonChangeTheme"/>

    <Button
        android:id="@+id/buttonChangeTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:text="@string/btn_change_theme"
        android:visibility="invisible"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_box"
        app:layout_constraintEnd_toStartOf="@id/img_button_backspace"
        app:layout_constraintBottom_toTopOf="@id/button10"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/img_button_backspace"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_backspace"
        android:contentDescription="@string/img_content_description"
        app:srcCompat="@drawable/ic_backspace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_box"
        app:layout_constraintStart_toEndOf="@id/buttonChangeTheme"
        app:layout_constraintBottom_toTopOf="@id/button10"
        android:layout_marginEnd="8dp"/>

    <!--    extra line-->
    <Button
        android:id="@+id/button10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="10"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button100"
        app:layout_constraintBottom_toTopOf="@id/swipeLine"/>

    <Button
        android:id="@+id/button100"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="100"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button10"
        app:layout_constraintEnd_toStartOf="@id/button1000"
        app:layout_constraintBottom_toTopOf="@id/swipeLine"/>

    <Button
        android:id="@+id/button1000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="1000"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/swipeLine"/>

    <!--    swipeLine-->

    <View
        android:id="@+id/swipeLine"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/buttonChangeTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/ic_swipeLine"
        android:layout_width="32dp"
        android:layout_height="16dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonChangeTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/swipeLineDividerTop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/buttonChangeTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/swipeLineDividerBottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/swipeLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--    firstLine-->

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/_7"
        android:paddingVertical="8dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintTop_toBottomOf="@id/swipeLine"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/_8"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button7"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/swipeLine"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/_9"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@id/buttonAdd"
        app:layout_constraintTop_toBottomOf="@id/swipeLine"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onOperatorClick"
        android:text="@string/plus"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swipeLine"/>

    <!--    secondLine-->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_four"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_five"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_six"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/buttonMin"
        app:layout_constraintTop_toBottomOf="@id/button7"/>

    <Button
        android:id="@+id/buttonMin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onOperatorClick"
        android:text="@string/str_minus"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button7"/>

    <!--    thirdLine-->

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_one"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_two"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintEnd_toStartOf="@id/button3"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_three"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/buttonMultiply"/>

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onOperatorClick"
        android:text="@string/str_mult"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--    fourthLine-->
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:text="@string/str_clear"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonZero"/>

    <Button
        android:id="@+id/buttonZero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onNumberButtonClick"
        android:text="@string/str_zero"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/buttonClear"
        app:layout_constraintEnd_toStartOf="@id/buttonDiv"
        app:layout_constraintTop_toBottomOf="@id/button1"/>

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:onClick="onOperatorClick"
        android:text="@string/str_del"
        android:textColor="@color/colorPrimaryText"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/buttonZero"
        app:layout_constraintEnd_toStartOf="@id/buttonEqual"
        app:layout_constraintTop_toBottomOf="@id/button1"/>

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:background="@android:color/transparent"
        android:text="@string/str_equal"
        android:textColor="@color/colorAccent"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@id/buttonDiv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button1"/>

</androidx.constraintlayout.motion.widget.MotionLayout>